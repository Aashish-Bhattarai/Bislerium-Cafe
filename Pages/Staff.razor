@page "/staff"
<body class="container">

        <div class="heading">
        <h1> Select Coffee and Add-ins:</h1>
        </div>    

    <div class="content-container">
        <div class="coffee-selection">
            <div>
                <label for="coffeeType">Select Coffee Type:</label>
                <select id="coffeeType">
                    <option value="">Select Coffee Type</option>
                    <option>Cappuccino</option>
                    <option>Latte</option>
                    <option>Espresso</option>
                </select>
            </div>
            <div>
                <label for="coffeePrice">Coffee Price:</label>
                <input type="text" id="coffeePrice" placeholder="Selected Coffee Price">
            </div>

            <div>
                <label for="userMembership">Membership-ID:</label>
                <input type="text" id="userMembership" placeholder="Enter Membership-ID">
            </div>
        </div>

        <div class="coffee-addin">
            <div>
                <label for="addInType">Select Add-in:</label>
                <select id="addInType">
                    <option value="">Select Add-in </option>
                    <option>Cinnamon</option>
                    <option>Honey</option>
                    <option>Ginger</option>
                </select>
            </div>

            <div>
                <label for="addInPrice">Add-in Price:</label>
                <input type="text" id="addInPrice" placeholder="Selected Add-in Price">
            </div>
        </div>
    </div>

    <div class="button-container">
        <button onclick="placeOrder()">Place Order</button>
    </div>
    
    <div class="table">
        <table>
            <tr>
                <th> ID </th>
                <th> Coffee Type </th>
                <th> Price </th>
                <th> Add-In Type </th>
                <th> Price </th>
                <th> Total Price </th>
                <th> Bill </th>  @* This should be a button after clicking which a bill is generated *@  
            </tr>
            @*
                Should get the value from the selected items by the staff for the users after clicking the place order button. I don't know how to implement the logic as of now ;)
            *@
        </table>
    </div>

    <div class="btn-Report">
        <button onclick="generateReport()">Generate Report</button>
        @*
            should generate report in a pdf after clicking this button
        *@
    </div>

</body>


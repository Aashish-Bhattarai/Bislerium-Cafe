@page "/staff"
<body>
<div class= "coffee-selection">
<div>
    <label for="coffeeType">Select Coffee Type:</label>
    <select id="coffeeType">
        <option>Cappuccino</option>
        <option>Latte</option>
        <option>Espresso</option>
    </select>
</div>
</div>

<div class= "coffee-addin">
<div>
    <label for="coffeePrice">Coffee Price:</label>
    <input type="text" id="coffeePrice" placeholder="Enter Coffee Price">
</div>

<div>
    <label for="userMembership">User Membership:</label>
    <input type="text" id="userMembership" placeholder="Enter User Membership">
</div>

<div>
    <label for="addInType">Select Add-in Type:</label>
    <select id="addInType">
        <option>Cinnamon</option>
        <option>Honey</option>
        <option>Ginger</option>
    </select>
</div>
<div>
    <label for="addInPrice">Add-in Price:</label>
    <input type="text" id="addInPrice" placeholder="Enter Add-in Price">
</div>
</div>

<button onclick="placeOrder()">Place Order</button>
<button onclick="backToMainMenu()">Back to Main Menu</button>
</body>



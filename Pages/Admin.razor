@page "/admin"

<body class="container">

    <div class="heading">
        <h1>Admin Dashboard</h1>
    </div>

    <div class="content-container">
        <div class="coffee-configuration">
            <h2>Coffee Configuration</h2>

            <!-- Coffee configuration -->
            <div>
                <label for="coffeeType">Select Coffee Type:</label>
                <select id="coffeeType">
                    <option value="">Select Coffee Type</option>
                    <option>Cappuccino</option>
                    <option>Latte</option>
                    <option>Espresso</option>
                </select>
            </div>

            <div>
                <label for="coffeePrice">Coffee Price:</label>
                <input type="text" id="coffeePrice" placeholder="Enter Coffee Price">
            </div>
        </div>

        <div class="addin-configuration">
            <h2>Add-in Configuration</h2>

            <!-- Add-In configuration -->
            <div>
                <label for="addInType">Select Add-in:</label>
                <select id="addInType">
                    <option value="">Select Add-in</option>
                    <option>Cinnamon</option>
                    <option>Honey</option>
                    <option>Ginger</option>
                </select>
            </div>

            <div>
                <label for="add-inPrice">Add-in Price:</label>
                <input type="text" id="add-inPrice" placeholder="Enter Add-in Price">
            </div>
        </div>
    </div>

    <div class="button-container">
        <button onclick="configureCoffee()" style="margin-left:17%">Configure Coffee </button>
        <button onclick="configureAddin()" style="margin-right:17%">Configure Add-ins</button>
    </div>

</body>


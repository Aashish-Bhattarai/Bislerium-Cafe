@page "/admin"

<body class="container">

    <div class="heading">
        <h1>Welcome, Admin!!</h1>
    </div>
    <br />
    <div class="heading2">
        <h2> Choose Configuration Options: </h2>
    </div>
    <br />

    <div class="btn-container">
     
        <button @onclick="NavigateToCoffee"> Configure Coffee</button>
    
        <button @onclick="NavigateToAddIns" style="margin-left:30px;"> Configure Add-ins</button>
   
    </div>

</body>

@code {
    [Inject]
    private NavigationManager NavigationManager { get; set; }

    private void NavigateToCoffee()
    {
        NavigationManager.NavigateTo("/configCoffee");
    }

    private void NavigateToAddIns()
    {
        NavigationManager.NavigateTo("/configAddin");
    }

}

<style>

    h1{
        color: maroon;
        font-family:'Times New Roman', Times, serif;
    }

    .btn-container {
        display: flex;
        margin: 10px;
    }

    button {
        padding: 13px;
        background-color: #4caf50;
        color: #fff;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        padding-left: 20px;
        padding-right: 20px; 
       
    }

    button:hover {
        background-color: #388e3c;
    }
</style>
